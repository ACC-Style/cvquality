extends ./common/layout.pug

include ./common/sections.pug
include ./common/toc.pug

block title
  | Layouts

block nav
  -var selected = 'Layouts';

block content
  .SG-row
    .SG-gr-12
      .SG-h1 Layouts

  .SG-row
    .SG-gr-6
      .SG-h3 Table of content
    .SG-gr-6
      .SG-h3 What are Layouts?

  .SG-row
    .SG-gr-6.SG-toc
      +toc(styles.Layouts)
    .SG-gr-6
      .SG-p.
        Layouts are the most complex types. They may even consist of multiple molecules
        or other Layouts again. The header of this page is surely a layout.
      .SG-p.
        To mark a variable or mixin as a layout, annotate it with the <span class="SG-strong">@layouts</span> tag, optionally followed by a sub-section.

  if meta.demo
    include ./common/demo.pug

  if styles.Layouts
    +section-second-level(styles.Layouts)
